<div class="row" style="padding-top: 50px;">
<div class="col s12 m6 offset-m3">
  <h1>
    New tweet
  </h1>
  <%= form_with url: tweets_path, method: :post, local: true do |form| %>
    <div class="field">
      <label for="tweet_text">Text</label>
      <%= form.text_area :text %>
    </div>      
    <div class="actions">
      <%= form.submit :commit %>
    </div>
  <% end %>
</div>
</div>
